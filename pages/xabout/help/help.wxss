  align-items: center;
  height: 100%;
  box-sizing: border-box;
}

.logo {
  width: 260rpx;
  height: 260rpx;
  margin-top: 25rpx;
  margin-bottom: 20rpx;
}

.title {
  margin-inline-start: 10rpx;
  font-family: Songti SC;
  font-size: 30rpx;
  font-weight:700;
  color: #3d3d3d;
}

.title2 {
  margin-inline-start: 5rpx;
